{
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "umd",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"pretty": true,
		"target": "es5",
		"strictNullChecks": true,
		"noImplicitThis": true,
		"paths": {
			"grunt-dojo2/*": [
				"./*"
			]
		}
	},
	"include": [
		"./index.ts",
		"./index.d.ts",
		"./options/**/*.ts",
		"./tasks/**/*.ts",
		"./lib/**/*.ts",
		"./tests/**/*.ts",
		"./typings/index.d.ts"
	]
}
